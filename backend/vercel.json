{
  "version": 2,
  "builds": [
    { "src": "src/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],  // Specify allowed HTTP methods
      "headers": {
        "Access-Control-Allow-Origin": "https://quizfinal-iacx-4oa5w1cx4-sagars-projects-0f20619e.vercel.app",  // Allowed origin
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",  // Allowed methods
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Custom-Header",  // Allowed headers
        "Access-Control-Allow-Credentials": "true",  // Allow cookies/credentials to be included
        "Access-Control-Max-Age": "86400"  // Cache preflight request result for 24 hours
      }
    }
  ]
}

  
